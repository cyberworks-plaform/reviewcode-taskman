{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ServiceCode": "AxeTaskManagement",
  "Tokens": {
    "Key": "0123456789ABCDEF",
    "Issuer": "http://ce.com.vn",
    "Audience": "http://ce-axe.com.vn"
  },
  "ConnectionStrings": {
    "AxeTaskmanagementDbConnection": "",
    "ProviderName": "Npgsql" // System.Data.SqlClient (remove Port in connectionString), Npgsql, MySql.Data.MySqlClient, OraOLEDB.Oracle, System.Data.SQLite,... 
  },
  "EnableSeedData": "true",
  "UseDebugMode": "false",
  "UseLog": "true",
  "UseLogAction": "false",
  "UseLogCrud": "false",
  "UseLogWorkflow": "false",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Default": "Warning",
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\log.txt",
          "fileSizeLimitBytes": 100000,
          "retainedFileCountLimit": 10,
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ]
  },
  "Mongo": {
    "ConnectionString": "mongodb://cw:123456@172.16.1.16:27017/Axe_Pro",
    "DatabaseName": "Axe_Pro"
  },
  "Swagger": {
    "UseSwagger": "true",
    "ShowHostName": "true"
  },
  "AutoMigration": "false",
  "ReleaseInfo": {
    "BuildNumber": "",
    "Env": ""
  },
  "Cache": {
    "UseCache": true,
    "Type": "redis", // memcache, sqlserver, redis
    "CacheConnection": "", // connection string incase sqlserver
    "Host": "172.16.1.15",
    "Port": "6379",
    "DefaultDatabase": "" // incase redis 
  },
  "RabbitMq": {
